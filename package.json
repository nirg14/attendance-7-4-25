{
  "name": "attendance-vardi",
  "version": "1.0.0",
  "description": "מערכת מעקב נוכחות לבית ספר למחוננים",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install --legacy-peer-deps && npm run build",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.3",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "nodemon": "^3.0.2"
  }
}
